@model DataAccess.DTOs.UserLoginDTO

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row justify-content-center pt-5 mt-5 mr-1">
            <div class="col-md-4 personalForm">
                <form action="">
                    <div class="form-group text-center pt-3">
                        <h1 class="text-light">INICIAR SESIÓN</h1>
                    </div>
                    <div class="form-group mx-sm-4 pt-3">
                        <input name="email" type="text" class="form-control" placeholder="Ingrese su usuario" />
                    </div>
                    <div class="form-group mx-sm-4 pb-5">
                        <input name="password" type="password" class="form-control" placeholder="Ingrese su contraseña" />
                    </div>
                    <div class="form-group mx-sm-4 pb-5">
                        <input type="submit" class="btn btn-block personalButton " value="INGRESAR" />
                    </div>
                    <div class="text-center w-full text-danger">
                        <i class="@ViewBag.Warning"></i> @ViewBag.LoginFail
                    </div>
                    <div class="form-group mx-sm-4 text-right">
                        <span><a href="#" class="forgot">olvidé mi contraseña</a></span>
                    </div>
                    <div class="form-group text-center">
                        <span><a href="@Url.Action("Create","User")" class="create">Crear cuenta</a></span>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    document.addEventListener('DOMContentLoaded', function () {
        var type ='@ViewBag.NType';
        var message ='@ViewBag.NMessage';
        console.log("type: "+type+" message: "+message);
        if (type === null ||type==="" || message === null || message==="") {
            toastr.error("text");
        }
        else {
            toastr.success(message, "title", { "iconClass": type });
        }
    });

    //Notificaciones

</script>